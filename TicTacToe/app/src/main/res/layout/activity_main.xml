<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#0047AB"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/btn1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"
        android:layout_toLeftOf="@+id/btn2"
        android:layout_above="@+id/btn5"
        android:layout_marginBottom="22dp"

        android:background="#0047AB">

        <ImageView
            android:id="@+id/buttonimage1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ImageView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"
        android:layout_above="@+id/btn5"
        android:layout_marginBottom="22dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#0047AB">

        <ImageView
            android:id="@+id/buttonimage2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ImageView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@+id/btn2"
        android:layout_above="@+id/btn5"
        android:layout_marginBottom="22dp"

        android:background="#0047AB">

        <ImageView
            android:id="@+id/buttonimage3"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ImageView>

    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/btn4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_toLeftOf="@+id/btn5"
        android:layout_centerInParent="true"
        android:background="#0047AB">

        <ImageView
            android:id="@+id/buttonimage4"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ImageView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn5"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#0047AB">

        <ImageView
            android:id="@+id/buttonimage5"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ImageView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn6"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_toRightOf="@+id/btn5"
        android:layout_centerInParent="true"
        android:background="#0047AB">

        <ImageView
            android:id="@+id/buttonimage6"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ImageView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn7"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_toLeftOf="@+id/btn8"
        android:layout_below="@+id/btn4"
        android:layout_marginTop="23dp"
        android:layout_centerInParent="true"
        android:background="#0047AB">

        <ImageView
            android:id="@+id/buttonimage7"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ImageView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn8"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/btn5"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#0047AB">

        <ImageView
            android:id="@+id/buttonimage8"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ImageView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn9"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_toRightOf="@+id/btn8"
        android:layout_below="@+id/btn4"
        android:layout_marginTop="23dp"
        android:layout_centerInParent="true"
        android:background="#0047AB">

        <ImageView
            android:id="@+id/buttonimage9"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ImageView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="330dp"
        android:layout_height="8dp"
        android:background="#FFFFFF"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/btn5"
        android:layout_marginBottom="8dp">

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="330dp"
        android:layout_height="8dp"
        android:background="#FFFFFF"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btn5"
        android:layout_marginTop="8dp">

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="8dp"
        android:layout_height="350dp"
        android:background="#FFFFFF"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/btn5"
        android:layout_marginTop="8dp"
        android:layout_marginRight="-14dp">

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="8dp"
        android:layout_height="350dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="-14dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/btn5"
        android:background="#FFFFFF">

    </RelativeLayout>

    <Button
        android:id="@+id/resetbutton"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_below="@+id/btn8"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:backgroundTint="#899499	"
        android:text="RESET"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold">

    </Button>



    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SCORE X :- 0"
            android:textSize="28sp"
            android:id="@+id/scorex"
            android:textColor="#228B22"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SCORE Y :- 0"
            android:id="@+id/scorey"
            android:textSize="28sp"
            android:textColor="#228B22"
            android:textStyle="bold">

        </TextView>

    </LinearLayout>









</RelativeLayout>